<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>

    <!-- login and register servlet -->

    <servlet>
        <display-name>RegisterServlet</display-name>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>servlets.RegisterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <security-role-ref>
            <role-name>ADMINISTRATOR</role-name>
            <role-link>admin</role-link>
        </security-role-ref>
        <display-name>LoginServlet</display-name>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlets.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>

    <!-- contructor models for users -->

    <servlet>
        <servlet-name>model</servlet-name>
        <servlet-class>servlets.user.ConstructorModel</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>model</servlet-name>
        <url-pattern>/user/Constructor/model</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>engine</servlet-name>
        <servlet-class>servlets.user.ConstuctorEngine</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>engine</servlet-name>
        <url-pattern>/user/Constructor/engine</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>kindOfBody</display-name>
        <servlet-name>kindOfBody</servlet-name>
        <servlet-class>servlets.user.ConstructorBody</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>kindOfBody</servlet-name>
        <url-pattern>/user/Constructor/kindOfBody</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>transmission</display-name>
        <servlet-name>transmission</servlet-name>
        <servlet-class>servlets.user.ConstructorTransmission</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>transmission</servlet-name>
        <url-pattern>/user/Constructor/transmission</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>color</display-name>
        <servlet-name>color</servlet-name>
        <servlet-class>servlets.user.ConstructorColor</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>color</servlet-name>
        <url-pattern>/user/Constructor/color</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>result</display-name>
        <servlet-name>result</servlet-name>
        <servlet-class>servlets.user.ConstructorResult</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>result</servlet-name>
        <url-pattern>/user/Constructor/result</url-pattern>
    </servlet-mapping>



    <!-- constructor models for stuff -->

    <servlet>
        <display-name>modelStuff</display-name>
        <servlet-name>modelStuff</servlet-name>
        <servlet-class>servlets.user.ConstructorResult</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>modelStuff</servlet-name>
        <url-pattern>/stuff/Constructor/model</url-pattern>
    </servlet-mapping>

    <!-- security -->

    <!-- security for stuff's content -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>stuff</web-resource-name>
            <url-pattern>/stuff/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>ADMINISTRATOR</role-name>
            <role-name>STAFF</role-name>
        </auth-constraint>
    </security-constraint>

    <!-- security for admin's content -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>admin content</web-resource-name>
            <url-pattern>/admin/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>ADMINISTRATOR</role-name>
        </auth-constraint>
    </security-constraint>

    <!-- security role -->
    <security-role>
        <role-name>STAFF</role-name>
    </security-role>

    <security-role>
        <role-name>ADMINISTRATOR</role-name>
    </security-role>



    <!-- login config -->

    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/LoginServlet</form-login-page>
            <form-error-page>/LoginServlet?error=1</form-error-page>
        </form-login-config>
    </login-config>

    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

</web-app>