<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <display-name>RegisterServlet</display-name>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>servlets.RegisterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>LoginServlet</display-name>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlets.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>model</servlet-name>
        <servlet-class>servlets.ConstructorModel</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>model</servlet-name>
        <url-pattern>/user/Constructor/model</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>engine</servlet-name>
        <servlet-class>servlets.ConstuctorEngine</servlet-class>        
    </servlet>
    
    <servlet-mapping>
        <servlet-name>engine</servlet-name>
        <url-pattern>/user/Constructor/engine</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>kindOfBody</display-name>
        <servlet-name>kindOfBody</servlet-name>
        <servlet-class>servlets.ConstructorBody</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>kindOfBody</servlet-name>
        <url-pattern>/user/Constructor/kindOfBody</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>transmission</display-name>
        <servlet-name>transmission</servlet-name>
        <servlet-class>servlets.ConstructorTransmission</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>transmission</servlet-name>
        <url-pattern>/user/Constructor/transmission</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>color</display-name>
        <servlet-name>color</servlet-name>
        <servlet-class>servlets.ConstructorColor</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>color</servlet-name>
        <url-pattern>/user/Constructor/color</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>result</display-name>
        <servlet-name>result</servlet-name>
        <servlet-class>servlets.ConstructorResult</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>result</servlet-name>
        <url-pattern>/user/Constructor/result</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

</web-app>